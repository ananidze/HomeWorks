@model AppointmentModel



<form method="post" class="col-sm-6">
    <div class="form-group row">
        <label asp-for="FirstName" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-7">
            <input asp-for="FirstName" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="LastName" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-7">
            <input asp-for="LastName" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Doctor" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-7">
            <input asp-for="Doctor" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Date" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-7">
            <input asp-for="Date" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-7 offset-sm-3">
            <button class="btn btn-primary" id="submit">Submit</button>
        </div>
    </div>
</form>